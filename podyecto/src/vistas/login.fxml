<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vistas.LoginController">
   <children>
      <TextField fx:id="usernameField" layoutX="30.0" layoutY="50.0" promptText="Username" />
      <PasswordField fx:id="passwordField" layoutX="30.0" layoutY="100.0" promptText="Password" />
      <Button layoutX="30.0" layoutY="150.0" mnemonicParsing="false" onAction="#handleLogin" text="Login" />
      <Button layoutX="150.0" layoutY="150.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
   </children>
</AnchorPane>
